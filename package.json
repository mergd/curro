    "lint": "pnpm run lint:style && pnpm run lint:prettier",
    "i18n-coverage": "node scripts/i18n-coverage.js",
    "i18n-sync": "node scripts/i18n-auto-sync.cjs",
    "i18n-sync:check": "node scripts/i18n-auto-sync.cjs --check-only",
    "auth:setup": "npx @convex-dev/auth"
  },
