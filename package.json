{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development next dev --port 3050",
    "build": "NODE_ENV=production pnpm run lint && pnpm run mdx:timestamps && next build",
